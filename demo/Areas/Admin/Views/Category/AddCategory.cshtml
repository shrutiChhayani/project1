@model demo.Areas.Admin.Models.CategoryModel

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>CategoryModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Name</label>

         
            <div class="col-md-10">
                <input type="text" id="txtname" name="name" class="form-control" placeholder="Name" />

              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create"  onclick="insertrecord()" style="cursor:pointer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Category", "Index")
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
     $("").on("click", function () {
        insertrecord();

    });
    function insertrecord() {
        debugger
        var name = $("#txtname").val();
        console.log(name);
        var datas = {
            CategoryName: name

        }
        $.ajax({
            type:'POST',
            url: '/Category/AddCategoryDetails',

            contentType:'application/json',
            data: JSON.stringify(datas),
            cache: false,
            async: false,
            success: function (data) {
                debugger
                alert("data inserted successfully")
                window.location.href = "@Url.Action("Index", "Category")";

            },
            error: function (error) {
                console.log(error);
            }
        });


    }

</script>
